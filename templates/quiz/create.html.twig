{% extends 'layout.html.twig' %}

{% form_theme formQuiz 'bootstrap_4_layout.html.twig' %}

{% block menu %}
    {% include "_menu.html.twig" with {
        'active': 'create'
    } %}
{% endblock %}

{% block main_content %}
    <div class="create-quiz">
        <h1>Cr√©ation de votre Quiz</h1>
        {{ form_start(formQuiz) }}

        {{ form_row(formQuiz.titre) }}
        {{ form_row(formQuiz.description) }}
        {{ form_row(formQuiz.end)}}
        {{ form_row(formQuiz.deadLine)}}
        <div class="anchor-calendar"></div>

        <div class="btn-form">
            {{ form_row(formQuiz.Suivant) }}
        </div>

        {{ form_end(formQuiz) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $('.js-datepicker').datepicker({
            format: 'dd-MM-yyyy',
            orientation: 'auto',
            autoclose : 'false',
            container : '.anchor-calendar',
            todayHighlight : 'true'
        });

        $(document).ready(function () {
            $('.date').hide();
            $('.checkboxdate').click(function (event) {
                if (this.checked) {
                    $('.date').toggle("slow");
                } else {
                    $('.date').hide("slow");
                }
            });
        });

    </script>
{% endblock %}