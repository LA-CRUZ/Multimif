{% extends 'layout.html.twig' %}

{% block menu %}
    {% include "_menu.html.twig" with {
        'active': 'home'
    } %}
{% endblock %}

{% block main_content %}
    <div class="intro">
        {% if not app.user %}
            <h1>Bienvenue sur votre site de Quiz en ligne</h1>
            <h2>Connectez vous dès maintenant pour pouvoir commencer !</h2>
            <div class="btn-home">
                <a href="{{ path('security_login') }}"><button type="button" class="btn btn-primary">Connexion</button></a>
                <a href="{{ path('security_registration') }}"><button type="button" class="btn btn-primary">Inscription</button></a>
            </div>
        {% else %}
            {% if "ROLE_TEACHER" in app.user.roles %}
                <h1>Bienvenue sur votre site de création de quiz en ligne</h1>
                <h2>Commencez dès maintenant en créant votre Quiz</h2>
                <a href="{{ path('create') }}"><button type="button" class="btn btn-primary btn-creation">Créer un Quiz</button></a>
            {% else %}
                <h1>Bienvenue sur votre site de quiz en ligne</h1>
                <h2>Commencez dès maintenant en répondant à un Quiz</h2>
                    <div class="search-container">
                    <form action="/search" method="post">
                        <div class="form-group">
                            <input type="text" placeholder="Entrez le code du quiz.." name="id_quiz" class="form-control">
                            <button type="submit" class="btn btn-success btn-create">Répondre au Quiz</button>
                        </div>
                    </form>
                </div>
            {% endif %}
        {% endif %}
    </div>
{% endblock %}
