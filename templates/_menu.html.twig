<ul class="navbar-nav mr-auto">
    <li class="nav-item">
        <a href="{{ path('home') }}" class="nav-link">Accueil</a>
    </li>
    {% if not app.user %}
    <li class="nav-item">
        <a href="{{ path('security_registration') }}" class="nav-link">Inscription</a>
    </li>
    <li class="nav-item">
        <a href="{{ path('security_login') }}" class="nav-link">Connexion</a>
    </li>
    {% else %}
    {% for link in main_menu %}
        <li class="nav-item">
            <a href="{{ url(link.route) }}" class="nav-link" {% if link.route == active %}class="active"{% endif %}>
                {{ link.label | trans }}
            </a>
        </li>
    {% endfor %}
    <li class="nav-item">
        <a href="{{ path('security_logout') }}" class="nav-link">Deconnexion</a>
    </li>
    {% endif %}
</ul>